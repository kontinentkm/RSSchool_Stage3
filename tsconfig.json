{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["jest", "@types/jest"]
  },
  "include": [
    "src",
    "src/types.tsx",
    "__mocks__",
    "__tests__/PostsList1.test.tsx",
    "__tests__/PostsList2.test.tsx",
    "__tests__/PostsList3.test.tsx",
    "__tests__/Search1.test.tsx",
    "__tests__/Search2.test.tsx",
    "__tests__/Posts1.test.tsx",
    "__tests__/Posts2.test.tsx",
    "__tests__/SinglePost1.test.tsx",
    "__tests__/SinglePost2.test.tsx",
    "__tests__/SinglePost3.test.tsx",
    "__tests__/ErrorPage.test.tsx",
    "__tests__/Pagination.test.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
